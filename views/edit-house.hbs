            <option value="0"></option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
          </select>
        <label for="swimmingPool">Swimmingpool</label>        
        <select name="swimmingPool" id="swimmingPool"value="{{swimmingPool}}">
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
        <label for="garden">Garden</label> 
        <select name="garden" id="Garden" value="{{garden}}">
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
        <label for="privateBeach">Private beach</label> 
        <select name="privateBeach" id="privateBeach" value="{{privateBeach}}"> 
          <option value="yes">Yes</option>
          <option value="no">No</option>
        </select>
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="{{price}}" placeholder="â‚¬">
