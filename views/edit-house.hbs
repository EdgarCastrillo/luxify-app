<main>
  <section class="form-sell">
    <form class="" action="/houses/sells/{{_id}}/edit" method="POST">
      <label for="title">Title</label>        
      <input type="text" name="title" id="title" value="{{title}}" placeholder="Title">
      <label for="photos">Photos</label>        
      <input type="file" name="photos" id="photos" value="{{photos}}" placeholder="photos">
      <label for="area">Area</label>        
      <input type="text" name="area" id="area" value="{{area}}" placeholder="area">
      <input type="text" name="location" id="location" value="{{location}}"  placeholder="location">
      <label for="description">Description</label>        
      <textarea name="description" id="description" value="{{description}}" placeholder="description">
      </textarea>
      <label for="rooms">Rooms</label>                
